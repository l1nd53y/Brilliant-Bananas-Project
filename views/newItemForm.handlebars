<form action="/new-item" method="post" id="form">
    <div class="container" id ="myDiv">
        <div class="card">
            <div class="card-header">
                <h3>New Item Form </h3>
            </div>
            <div class="form-group">
                <label id="nameId" for="name"> Item Name :</label>
                <input type="text" class="w-30 form-control" id="name" name="name" placeholder="Enter Name" autocomplete="off" required>
                
                <label id="imageId" for="image">Image URL:</label>
                <input type="text" class="w-70 form-control" id="image" name="image" placeholder="URL" autocomplete="off" required>

                <label id="categoryId" for="category">Category:</label>
                <input type="text" class=" form-control" id="category" name="category" placeholder="Enter Category" autocomplete="off" required>
    
                <label id="priceId" for="price">Enter price:</label>
                <input type="text" id="price" class="w-30 form-control" name="price" placeholder="$"  required autocomplete="off">
                    
                <label id ="descriptionId" for="description">Description:</label>
                <textarea class="form-control w-70" id="description" name="description" placeholder="Description" rows="3" required></textarea>
                <br>
                <br>
                
            <div class="container">
                <div class="col-sm-10">
                    <a class="btn" href="/items/{{id}}"><button type="button" id="button" class="btn btn-success">Add Item</button></a>
                    <button type="button" id="resetbutton" class="btn btn-primary">Reset Item</button>
                </div>
            </div>
        
            </div>
        </div>
    </div>
</form>