<form action="/new-warehouse" method="post" id="form">
    <div class="container" id ="myDiv">
        <div class="card">
            <div class="card-header text-center">
                <h1 id="taskList">New Warehouse</h1>
            </div>
                <div class="form-group col-sm-6 col-md-6">
                    <label id="nameId" for="name">Warehouse Name:</label>
